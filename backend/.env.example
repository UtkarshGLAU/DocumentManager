# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/documentManagement
# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/documentManagement

# Google OAuth Configuration (required for Google Drive API)
GOOGLE_CLIENT_ID=your_google_client_id_from_cloud_console
GOOGLE_CLIENT_SECRET=your_google_client_secret_from_cloud_console

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
# For production:
# FRONTEND_URL=https://your-app.vercel.app

# Server Configuration
PORT=5000
NODE_ENV=development

# Optional: Admin emails (comma-separated)
ADMIN_EMAILS=admin@example.com,another-admin@example.com
